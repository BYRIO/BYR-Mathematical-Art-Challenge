{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "dist"
    },
    "include": ["src", "utils", "scripts"]
}
